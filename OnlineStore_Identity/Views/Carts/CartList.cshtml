@model IEnumerable<Cart>
<!--Grid column-->
<div class="col-lg-8 mx-0 px-0">
    <!-- Card -->
    <h5 class="mb-4">Cart (<span>@Model.Count()</span> items)</h5>

    <div class="card wish-list mb-3 max-height-500" style="overflow-y:scroll">
        <div class="card-body w-95">


            <!-- Card -->
            @foreach (var item in Model)
            {

                <div class="row mb-4">
                    <div class="col-md-5 col-lg-3 col-xl-3">
                        <div class="view zoom overlay z-depth-1 rounded mb-3 mb-md-0">
                            <img class="img-fluid w-100"
                                 src="https://mdbootstrap.com/img/Photos/Horizontal/E-commerce/Vertical/12a.jpg" alt="Sample">
                        </div>
                    </div>
                    <div class="col-md-7 col-lg-9 col-xl-9">
                        <div>
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h5>@item.Store.productColor @item.Store.Product.productName</h5>
                                    <p class="mb-3 text-muted text-uppercase small">@item.Store.Product.Category.categoryName</p>
                                    <p class="mb-2 text-muted text-uppercase small">Color: @item.Store.productColor</p>
                                    <p class="mb-3 text-muted text-uppercase small">Size: @item.Store.productSize</p>
                                </div>
                                <div class="text-center left-2 position-relative">
                                    <div class="def-number-input number-input safari_only mb-0 w-100">
                                        <span onclick="IncOrDec(event,@item.Store.Product.productPrice, 'minus',@item.cartID)"    
                                              class="py-2 px-2 btn mb-1 mr-1 border-0 text-primary">-</span>
                                        <input @*onchange="getTemp(event,@item.Store.Product.productPrice)"*@ class="form-control d-inline w-45 text-right bg-gradient-primary text-light text-bolder" onkeydown="prevent(event)" min=@(item.Store.productQuantity == 0 ? 0 : 1) name="quantity" max="@item.Store.productQuantity" value="@(item.Store.productQuantity == 0 ? 0 : item.quantity)" type="number" disabled>
                                        <span onclick="IncOrDec(event,@item.Store.Product.productPrice, 'plus',@item.cartID)"
                                              class="py-2 px-2 btn mb-1 ml-1 border-0 text-primary">+</span>
                                    </div>
                                    <small id="passwordHelpBlock" class="form-text text-muted text-center">

                                        @if (item.Store.productQuantity == 0)
                                        {
                                            <span class="text-danger">(Out Of Stock)</span>
                                        }
                                        else if (item.Store.productQuantity == 1)
                                        {
                                            <span class="text-warning">(Note, 1 Piece)</span>
                                        }
                                        else
                                        {
                                            <span></span>
                                        }
                                    </small>
                                </div>
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <a href="#!" type="button" class="card-link-secondary small text-uppercase mr-3" onclick="removeFromCart(@item.storeID,event)">
                                        <i class="fas fa-trash-alt mr-1"></i> Remove item
                                    </a>
                                    <a href="#!" type="button" class="card-link-secondary small text-uppercase">
                                        <i class="fas fa-heart mr-1"></i> Move to wish list
                                    </a>
                                </div>
                                <p class="mb-0"><span><strong>EGP @item.Store.Product.productPrice</strong></span></p>
                            </div>
                        </div>
                    </div>
                </div>
                <hr class="mb-4">
                <!-- Card -->


            }

        </div>
    </div>
    <p class="text-primary mb-4">
        <i class="fas fa-info-circle mr-1"></i> Do not delay the purchase, adding
        items to your cart does not mean booking them.
    </p>
    <div class="card mb-3">
        <div class="card-body">

            <h5 class="mb-4">Expected shipping delivery</h5>

            <p class="mb-0"> @DateTime.Now.AddDays(3).ToLongDateString() - @DateTime.Now.AddDays(5).ToLongDateString()</p>
        </div>
    </div>
    <!-- Card -->
    <!-- Card -->
    <div class="card mb-3">
        <div class="card-body">

            <h5 class="mb-4">We accept</h5>

            <img class="mr-2" width="45px"
                 src="https://mdbootstrap.com/wp-content/plugins/woocommerce-gateway-stripe/assets/images/visa.svg"
                 alt="Visa">
            <img class="mr-2" width="45px"
                 src="https://mdbootstrap.com/wp-content/plugins/woocommerce-gateway-stripe/assets/images/amex.svg"
                 alt="American Express">
            <img class="mr-2" width="45px"
                 src="https://mdbootstrap.com/wp-content/plugins/woocommerce-gateway-stripe/assets/images/mastercard.svg"
                 alt="Mastercard">
            <img class="mr-2" width="45px"
                 src="https://z9t4u9f6.stackpathcdn.com/wp-content/plugins/woocommerce/includes/gateways/paypal/assets/images/paypal.png"
                 alt="PayPal acceptance mark">
        </div>
    </div>
    <!-- Card -->


</div>

<!--Grid column-->
<div class="col-lg-4">

    <h5 class="mb-4">The total amount of</h5>
    <!-- Card -->

    <div class="card mb-3">
        <div class="card-body">

            <ul class="list-group list-group-flush">
                <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                    Temporary amount

                    <span>EGP</span><span id="total"> @Model.Where(s => s.Store.productQuantity != 0).Select(s => s.quantity * s.Store.Product.productPrice).Sum()</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                    Shipping
                    <span>Gratis</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                    <div>
                        <strong>The total amount of</strong>
                        <strong>
                            <p class="mb-0">(including VAT)</p>
                        </strong>
                    </div>
                    <span><strong>$53.98</strong></span>
                </li>
            </ul>

            <button type="button" class="btn btn-primary btn-block waves-effect waves-light">go to checkout</button>

        </div>
    </div>
    <!-- Card -->
    <!-- Card -->
    <div class="card mb-3">
        <div class="card-body">

            <a class="dark-grey-text d-flex justify-content-between" data-toggle="collapse" href="#collapseExample1"
               aria-expanded="false" aria-controls="collapseExample1">
                Add a discount code (optional)
                <span><i class="fas fa-chevron-down pt-1"></i></span>
            </a>

            <div class="collapse" id="collapseExample1">
                <div class="mt-3">
                    <div class="md-form md-outline mb-0">
                        <input type="text" id="discount-code1" class="form-control font-weight-light"
                               placeholder="Enter discount code">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Card -->

</div>
